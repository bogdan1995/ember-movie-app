<div class="bricklayer">
  {{#each movies.results as |movie|}}
      <div>
          <div class="thumbnail">
              <img src="{{movie-image movie.poster_path}}" alt="...">
              <div class="caption">
                  <h3 class="text-center">{{movie.title}}</h3>
                  <p>{{movie.overview}}</p>
                  <p class="text-right">{{#link-to "movie" movie.id class='btn btn-primary'}}Details{{/link-to}}</p>
              </div>
          </div>
      </div>
  {{/each}}
</div>
