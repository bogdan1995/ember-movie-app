<div class="row">
  {{search-component search=model.search_string}}
</div>
<div class="row movie-list">
  <div class="row"><h1 class="text-center">Search results for ""</h1></div>
  <div class="bricklayer">
    {{#each model.results as |movie|}}
        <div class="">
            <div class="thumbnail">
                <img src="{{movie-image movie.poster_path}}" alt="...">
                <div class="caption">
                    <h3 class="text-center">{{movie.title}}</h3>
                    <p>{{movie.overview}}</p>
                    <p class="text-right">{{#link-to "movie" movie.id class='btn btn-primary'}}Details{{/link-to}}</p>
                </div>
            </div>
        </div>
    {{/each}}
  </div>
  <div class="row text-center">
      <button class="btn btn-info" {{action 'getMoreMovies' model.page}}>More Movies</button>
  </div>
</div>
